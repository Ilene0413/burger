<h1>Eat Da Burger</h1>

<div>
  <h2>Available Burgers</h2>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    <p>
      {{this.id}}. {{this.burger_name}}
      <button class="devour" data-id="{{this.id}}" >Devour!</button>
    </p>
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div>
  <h2>Devoured Burgers</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    <p>
      {{this.id}}. {{this.burger_name}}
    </p>
    {{/if}}
    {{/each}}
  </ul>
</div>

<div style="text-align:center">
  <h2> Create a Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="bgr">Burger</label>
      <input type="text" id="bgr" burger_name="burger_name">
    </div>
    <button type="submit">Create Burger</button>
</div>