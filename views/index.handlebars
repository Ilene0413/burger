<h1>Eat Da Burger</h1>

<div>
    <h2>Available Burgers</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        <p>
          {{this.id}}. {{this.burger_name}}
          <button devourid="{{this.id}}" class="devour">Devour!</button>
        </p>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
</div>

<div>
  <h2>Devoured Burgers</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
      <p>s
        {{this.id}}. {{this.burger_name}}
        <button burger-id="{{this.id}}" class="devourBurger">Devour!</button>
      </p>
    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>

<div style="text-align:center float:center">
  <h2> Create a Burger</h2>
  <form id="addburger" class=" form-group button-size">
    <textarea type="text" name="burger"></textarea>
    <br>
    <button type="submit<br>" style="al">Create Burger</button>
  </form>
</div>